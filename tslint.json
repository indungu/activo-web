{
    "defaultSeverity": "error",
    "extends": [
        "tslint-config-airbnb",
        "tslint-eslint-rules"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "no-constant-condition": true,
        "no-unused-expression": true,
        "ban": false,
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "curly": true,
        "eofline": true,
        "forin": true,
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ],
        "label-position": true,
        "max-line-length": [
            true,
            120
        ],
        "member-ordering": [
            true,
            "static-before-instance",
            "variables-before-functions"
        ],
        "no-arg": true,
        "no-bitwise": true,
        "no-console": [
            true,
            "log",
            "error",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-consecutive-blank-lines": true,
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-duplicate-imports": true,
        "no-empty": true,
        "no-eval": true,
        "no-string-literal": true,
        "no-submodule-imports": false,
        "no-switch-case-fall-through": true,
        "no-trailing-whitespace": false,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "radix": true,
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true,
                "singleline": "never"
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check",
            "allow-undefined-check"
        ],
        "typedef": [
            true,
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "object-curly-spacing": [
            true,
            "always"
        ],
        "prefer-object-spread": true,
        "prefer-const": true,
        "import-spacing": true,
        "no-irregular-whitespace": true,
        "no-implicit-dependencies": false,
        "object-literal-sort-keys": true,
        "ordered-imports": true,
        "ter-indent": [
            true,
            2,
            {
                "SwitchCase": 1
            }
        ]
    },
    "rulesDirectory": [],
    "jsdoc-require": [
        true
    ]
}
