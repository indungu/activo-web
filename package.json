{
  "name": "activo-web",
  "version": "1.0.0",
  "description": "This web application serves as a convenient window for relevant stakeholders to record and monitor Andelan assets across all locations.",
  "main": "index.js",
  "scripts": {
    "start:dev": "webpack-dev-server --config config/webpack.dev.js --mode development",
    "build": "webpack --config config/webpack.prod.js --mode production",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:mock-server": "http-server ./dist -p 1337",
    "test:e2e": "yarn build && concurrently \"yarn start:mock-server\" \"nightwatch\"",
    "lint:scss": "stylelint",
    "lint:ts": "tslint --project tsconfig.json --config tslint.json",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/activo-web.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andela/activo-web/issues"
  },
  "homepage": "https://github.com/andela/activo-web#readme",
  "dependencies": {
    "concurrently": "^3.5.1",
    "dotenv": "^5.0.1",
    "node-sass": "^4.9.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "webpack": "^4.8.3"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.7.0",
    "chromedriver": "^2.38.3",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.2",
    "mini-css-extract-plugin": "^0.4.0",
    "nightwatch": "^0.9.21",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.1",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "stylelint-scss": "^3.1.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^2.8.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "lint-staged": {
    "*.ts": "yarn lint:ts",
    "*.tsx": "yarn lint:ts",
    "*.scss": "yarn lint:scss"
  }
}
